{% set media_text_3_title = fields.media_text_3_title %}
{% set media_text_3_subtitle = fields.media_text_3_subtitle %}
{% set media_text_3_sections = fields.media_text_3_sections %}
{% set media_fondo_3_image = fields.media_fondo_3_image %}

{% set fondo = '' %}  {# Inicializa la variable fondo #}

<section class="block_blog_text_image_fondo customSection sectionParent" 
         style="{% if media_text_3_sections|length > 0 %}
                     {% for item in media_text_3_sections %}
                         {% set fondo = item.media_fondo_3_image %}  {# Asigna el fondo de la primera secciÃ³n #}
                         {% if fondo != '' %}
                             background-image: url('{{ get_img(fondo, 'src') }}');
                         {% endif %}
                     {% endfor %}
                 {% endif %}">

    <div class="section_contain">

        {% if media_text_3_sections|length > 0 %}
            <section class="innerSectionElement sct2 ">

                {% for item in media_text_3_sections %}

                    {% set title = item.media_text_3_title %}
                    {% set description = item.media_text_3_description %}
                    {% set image = item.media_text_3_image %}
                    {% set side = item.media_text_3_side %}
                    {% set i = i + 1 %}

                    <div class="groupElements row element_{{ i }} {{ side }}">

                        <div class="info col-md-12 col-lg-6">

                            {% if title != '' %}
                                <h3 class="secondaryTitle">
                                    {{ title|raw }}
                                </h3>
                            {% endif %}

                            {% if description != '' %}
                                <div class="text">
                                    {{ description|raw }}
                                </div>
                            {% endif %}

                        </div>

                        <div class="image col-md-12 col-lg-6">
                            <div class="containerImage">
                                
                                {% if image != '' %}
                                    <img src="{{ get_img(image, 'src') }}" alt="{{ get_img(image, 'alt') }}" loading="lazy">
                                {% endif %}
                                
                            </div>
                        </div>

                    </div>
                {% endfor %}

            </section>
        {% endif %}

    </div>

</section>
